
@using CRUD3.Models;
@model ContatoModel
@{
    ViewData["Title"] = "Excluir Contato";
}

<div class="text-center">
    <h3>Realmente deseja apagar o contato (@Model.Nome)?</h3>
</div>

<div class="d-grid gap-2">
    <a role="button" class="btn btn-danger" asp-controller="Contato" asp-route-id="@Model.Id" asp-action="Apagar">Apagar</a>
    <a role="button" class="btn btn-secondary" asp-controller="Contato" asp-action="Index">Voltar</a>
</div>